<style>
    * {
        padding: 0;
        margin: 0;
        font-family: "Peppins", sans-serif;
        box-sizing: border-box;
    }

    body {
        padding: 0;
        margin: 0;
        font-family: "Poppins", sans-serif;
        box-sizing: border-box;
        background-color: white;
        background-size: cover;
        background-position: center;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .pass-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
    }

    .titel {
        width: 400px;
        background-color: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(20px);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        color: #333;
        border-radius: 10px;
        padding: 30px 40px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    h1 {
        font-size: 36px;
        text-align: center;
        margin-bottom: 20px;
    }

    .para {
        font-size: 20px;
        text-align: center;
        padding: 10px 0 0 0;
    }

    input {
        width: 100%;
        height: 50px;
        margin: 10px 0;
        background: transparent;
        outline: none;
        border: 1.5px solid #333;
        border-radius: 40px;
        color: #333;
        padding: 20px;
    }

        input::placeholder {
            color: #333;
        }

    .btn {
        width: 100%;
        height: 45px;
        background: #333;
        border: none;
        outline: none;
        border-radius: 40px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        font-size: 16px;
        color: #fff;
        font-weight: 600;
        margin-top: 20px;
    }
</style>
<div class="pass-container">
    <div class="titel">
        <form asp-action="UserChangePassword" asp-controller="User" method="post">
            <h1>Change Password</h1>
            <input type="password" placeholder="Enter your current password" name="oldPass">
            <input type="password" placeholder="Enter new password" name="newPass">
            <button class="btn" type="submit">Apply</button>
        </form>
    </div>
</div>
